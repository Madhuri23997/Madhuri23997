 EXP no 2 Flashing Leds with time delay
#include<reg51.h> 
void Delay(void); 
void main (void) 
{ 
while(1) 
{ 
P2 = 0x00; 
Delay(); 
P2 = 0xFF; 
Delay(); 
} 
} 
void Delay(void) 
{ 
int i; 
TMOD =0x01; 
for(i=0;i<1000;i++) 
{ 
TL0=0x18; 
TH0=0xFC; 
TR0=1; 
while(TF0==0); 
TR0=0; 
TF0=0; 
} 
} 
 EXP no 2 HEX counter
#include<reg51.h> 
void Delay(void); 
void main (void) 
{ 
unsigned char count=0x00; 
while(1) 
{ 
P2 = count; 
Delay(); 
count= count+1; 
} 
} 
void Delay(void) 
{ 
int i,j; 
for(i=0;i<100;i++) 
{ 
for(j=0;j<1000;j++) 
{ 
} 
} 
}
