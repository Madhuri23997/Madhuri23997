exp 1 ext -ext
ORG 00H 
MOV R0,#0AH 
MOV R1,#00H 
MOV R2,#50H 
MOV DPTR ,#0100H 
JUMP: MOVX A,@DPTR 
PUSH DPL 
PUSH DPH 
MOV DPL,R1 
MOV DPH,R2 
MOVX@DPTR,A 
POP DPH 
POP DPL 
INC R1 
INC DPTR 
DJNZ R0,JUMP 
END
